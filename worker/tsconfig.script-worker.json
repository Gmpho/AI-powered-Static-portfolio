{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS", // Compile worker files to CommonJS for the script
    "moduleResolution": "node",
    "outDir": "../dist/worker-for-script", // Output to a temporary directory
    "rootDir": "./src", // Source files are in worker/src
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true, // Generate declaration files
    "types": ["node", "@cloudflare/workers-types"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/*.spec.ts"]
}
